{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "rootDir": "./src/",
        "outDir": "./dist/",
        "strict": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "typeRoots": [
            "node_modules/@types",
            "main.d.ts"
        ],
        "sourceMap": false,
        "baseUrl": "./",
        "paths": {
            "aux/*": ["src/auxiliar/*", "dist/auxiliar/*"],
            "commands/*": ["src/commands/*", "dist/commands/*"],
            "main": ["src/main", "dist/main"],
            "types": ["index"]
        }
    },
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    },
    "files": [
        "src/main.ts"
    ],
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    }